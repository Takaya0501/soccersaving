generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Savings {
  id          Int      @id @default(autoincrement())
  team        String
  competition String
  match_name  String
  amount      Int
  timestamp   DateTime @default(now())

  @@index([team])
  @@index([competition])
}

model Matches {
  id                 Int     @id @default(autoincrement())
  team               String
  competition        String
  match_name         String  @unique // ✅ ここを追加
  is_overtime_or_pk  Int     @default(0)
  is_final           Int     @default(0)
}

model Awards {
  id          Int      @id @default(autoincrement())
  team        String
  competition String
  rank        Int
  amount      Int

  @@unique([team, competition])
}