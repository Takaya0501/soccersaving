generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Savings {
  id          Int      @id @default(autoincrement())
  season      String   @default("25/26") // 追加: "25/26" や "2025" が入る
  team        String
  competition String
  match_name  String
  amount      Int
  match_date  DateTime?
  timestamp   DateTime @default(now())

  @@index([team])
  @@index([competition])
  @@index([season])
}

model Matches {
  id                Int     @id @default(autoincrement())
  season            String  @default("25/26") // 追加
  team              String
  competition       String
  match_name        String
  match_date        DateTime?
  is_overtime_or_pk Int     @default(0)
  is_final          Int     @default(0)

  // 同じ名前の試合でもシーズンやチームが違えば登録できるようにする
  @@unique([match_name, season, team]) 
}

model Awards {
  id          Int    @id @default(autoincrement())
  season      String @default("25/26") // 追加
  team        String
  competition String
  rank        Int
  amount      Int

  @@unique([team, competition, season])
}